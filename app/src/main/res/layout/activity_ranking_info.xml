<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="450dp"
        app:layout_constraintHeight_max="900dp">

        <ImageView
            android:id="@+id/ranking_x_bt"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/agree_x"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="18dp" />

        <TextView
            android:id="@+id/rank_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="랭킹기준"
            android:textSize="29dp"
            android:fontFamily="@font/pretendard_semi_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ranking_x_bt"
            android:layout_marginTop="25dp"
            android:layout_marginStart="18dp"/>

        <TextView
            android:id="@+id/rank_info_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rank_info"
            android:textSize="15dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textAlignment="gravity"
            android:gravity="left"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="@id/rank_info_title"
            app:layout_constraintTop_toBottomOf="@id/rank_info_title"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>