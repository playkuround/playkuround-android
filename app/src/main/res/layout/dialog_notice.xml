<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="invisible"
        android:id="@+id/dialog_notice_small_cl"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/dialog_notice_small_bg"
            android:layout_width="334dp"
            android:layout_height="227dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/dialog_notice_small_bg"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/dialog_notice_title_tv_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이벤트 이름"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/dialog_notice_small_bg"
            app:layout_constraintEnd_toEndOf="@id/dialog_notice_small_bg"
            app:layout_constraintTop_toTopOf="@id/dialog_notice_small_bg"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/dialog_notice_new_tv_small"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new!"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@id/dialog_notice_title_tv_small"
            app:layout_constraintTop_toTopOf="@id/dialog_notice_title_tv_small"
            app:layout_constraintBottom_toBottomOf="@id/dialog_notice_title_tv_small"
            android:textColor="#EA4933"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="3dp"/>
        
        <ImageView
            android:id="@+id/dialog_notice_left_btn_small"
            android:layout_width="16dp"
            android:layout_height="28dp"
            app:layout_constraintStart_toStartOf="@id/dialog_notice_small_bg"
            app:layout_constraintTop_toBottomOf="@id/dialog_notice_title_tv_small"
            android:src="@drawable/story_arrow"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:id="@+id/dialog_notice_right_btn_small"
            android:layout_width="16dp"
            android:layout_height="28dp"
            app:layout_constraintEnd_toEndOf="@id/dialog_notice_small_bg"
            app:layout_constraintTop_toTopOf="@id/dialog_notice_left_btn_small"
            android:src="@drawable/story_arrow"
            android:layout_marginEnd="35dp"
            android:scaleX="-1"/>

        <TextView
            android:id="@+id/dialog_notice_content_tv_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="210dp"
            app:layout_constraintStart_toEndOf="@id/dialog_notice_left_btn_small"
            app:layout_constraintEnd_toStartOf="@id/dialog_notice_right_btn_small"
            app:layout_constraintTop_toTopOf="@id/dialog_notice_left_btn_small"
            app:layout_constraintBottom_toBottomOf="@id/dialog_notice_left_btn_small"
            android:text="이벤트에 대한 내용 이벤트에 대한 내용 이벤트에 대한 내용 이벤트에 대한 내용 이벤트에 대한 내용"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="15dp"/>
        
        <Button
            android:id="@+id/dialog_notice_link_btn_small"
            android:visibility="invisible"
            android:layout_width="112dp"
            android:layout_height="48dp"
            android:background="@drawable/button_blue_small"
            android:text="링크"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/dialog_notice_small_bg"
            app:layout_constraintEnd_toEndOf="@id/dialog_notice_small_bg"
            app:layout_constraintBottom_toTopOf="@id/dialog_notice_indicator_rv_small"
            android:layout_marginBottom="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialog_notice_indicator_rv_small"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            app:layout_constraintStart_toStartOf="@id/dialog_notice_small_bg"
            app:layout_constraintEnd_toEndOf="@id/dialog_notice_small_bg"
            app:layout_constraintBottom_toBottomOf="@id/dialog_notice_small_bg"
            android:layout_marginBottom="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="invisible"
        android:id="@+id/dialog_notice_big_cl"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/dialog_notice_big_bg"
            android:layout_width="334dp"
            android:layout_height="487dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/dialog_notice_big_bg"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/dialog_notice_title_tv_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이벤트 이름"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/dialog_notice_big_bg"
            app:layout_constraintEnd_toEndOf="@id/dialog_notice_big_bg"
            app:layout_constraintTop_toTopOf="@id/dialog_notice_big_bg"
            android:layout_marginTop="55dp"/>

        <TextView
            android:id="@+id/dialog_notice_new_tv_big"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new!"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@id/dialog_notice_title_tv_big"
            app:layout_constraintTop_toTopOf="@id/dialog_notice_title_tv_big"
            app:layout_constraintBottom_toBottomOf="@id/dialog_notice_title_tv_big"
            android:textColor="#EA4933"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="3dp"/>

        <ImageView
            android:id="@+id/dialog_notice_left_btn_big"
            android:layout_width="16dp"
            android:layout_height="28dp"
            app:layout_constraintStart_toStartOf="@id/dialog_notice_big_bg"
            app:layout_constraintTop_toTopOf="@id/dialog_notice_big_bg"
            app:layout_constraintBottom_toBottomOf="@id/dialog_notice_big_bg"
            android:src="@drawable/story_arrow"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="40dp"/>

        <ImageView
            android:id="@+id/dialog_notice_right_btn_big"
            android:layout_width="16dp"
            android:layout_height="28dp"
            app:layout_constraintEnd_toEndOf="@id/dialog_notice_big_bg"
            app:layout_constraintTop_toTopOf="@id/dialog_notice_left_btn_big"
            android:src="@drawable/story_arrow"
            android:layout_marginEnd="35dp"
            android:scaleX="-1"/>
        
        <ImageView
            android:id="@+id/dialog_notice_image_iv_big"
            android:layout_width="210dp"
            android:layout_height="183dp"
            app:layout_constraintStart_toEndOf="@id/dialog_notice_left_btn_big"
            app:layout_constraintEnd_toStartOf="@id/dialog_notice_right_btn_big"
            app:layout_constraintTop_toBottomOf="@id/dialog_notice_title_tv_big"
            android:src="@color/lighter_gray"
            android:layout_marginTop="20dp"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/dialog_notice_content_tv_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="210dp"
            app:layout_constraintStart_toEndOf="@id/dialog_notice_left_btn_big"
            app:layout_constraintEnd_toStartOf="@id/dialog_notice_right_btn_big"
            app:layout_constraintTop_toBottomOf="@id/dialog_notice_image_iv_big"
            app:layout_constraintBottom_toTopOf="@id/dialog_notice_link_btn_big"
            android:text="이벤트에 대한 내용 이벤트에 대한 내용 이벤트에 대한 내용 이벤트에 대한 내용"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/dialog_notice_link_btn_big"
            android:layout_width="112dp"
            android:layout_height="48dp"
            android:background="@drawable/button_blue_small"
            android:text="링크"
            android:fontFamily="@font/neo_dunggeunmo_regular"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/dialog_notice_big_bg"
            app:layout_constraintEnd_toEndOf="@id/dialog_notice_big_bg"
            app:layout_constraintBottom_toTopOf="@id/dialog_notice_indicator_rv_big"
            android:layout_marginBottom="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialog_notice_indicator_rv_big"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            app:layout_constraintStart_toStartOf="@id/dialog_notice_big_bg"
            app:layout_constraintEnd_toEndOf="@id/dialog_notice_big_bg"
            app:layout_constraintBottom_toBottomOf="@id/dialog_notice_big_bg"
            android:layout_marginBottom="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>